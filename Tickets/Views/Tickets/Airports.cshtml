@model List<Tickets.Models.TicketsModel>
@{
    ViewBag.Title = "Lukianov Airlines | Airports";
    Layout = "Layout.cshtml";
}


<section id="banner">
    <h2>Lukianov Airlines</h2>
    <p>Time - The Most Valuable Resource in the World</p>
    <ul class="actions">
        <li><a href="#" class="button">Time to fly!</a></li>
    </ul>
</section>



<!-- Main -->
<section id="main" class="container">

    <section class="box special">
        <header class="major">
            <h2>Airports</h2>
            <p>

                <table>
                    <tr>
                        <td>№</td>
                        <td><b>City</b></td>
                    </tr>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        foreach (var item in Model[i].Airports)
                        {
                            <tr>
                                <td>@(item.Key+1)</td>
                                <td>@item.Value</td>
                            </tr>
                        }
                    }
                </table>
            </p>
        </header>

    </section>

</section>




