@model Tickets.Models.TicketsModel
@{
    ViewBag.Title = "Lukianov Airlines | Add Flight";
    Layout = "Layout.cshtml";
}


<section id="banner">
    <h2>Lukianov Airlines</h2>
    <p>Time - The Most Valuable Resource in the World</p>
    <ul class="actions">
        <li><a href="#" class="button">Time to fly!</a></li>
    </ul>
</section>



<!-- Main -->
<section id="main" class="container">

    <section class="box special">
        <header class="major">
            <h2>Add flight</h2>
            <p>
                @using (Html.BeginForm())
                {
                    <div>Fly from:@Html.DropDownListFor(m => m.Location, Model.Locations)</div>
                    <div>Fly to:@Html.DropDownListFor(m => m.Destination, Model.Destinations)</div>
                    <div>Price $@Html.TextBoxFor(m => m.Price)</div>
                    <div style="color:red;">@Html.ValidationMessageFor(m => m.Price)</div>
                    <div>Duration of flight @Html.TextBoxFor(m => m.Time)</div>
                    <div style="color:red;">@Html.ValidationMessageFor(m => m.Price)</div>
                    <br />
                    <input type="submit" value="Save" />
                }
            </p>
        </header>

    </section>

</section>
